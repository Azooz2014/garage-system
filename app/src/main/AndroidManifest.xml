<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.blacketron.garagesystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_garage"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_garage_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GarageSystem">
        <activity
            android:name=".controllers.about_screen.AboutActivity"
            android:exported="false"
            android:parentActivityName=".controllers.main_screen.MainActivity"/>
        <activity
            android:name=".controllers.details_screen.CustomerDetailsActivity"
            android:exported="false"
            android:parentActivityName=".controllers.main_screen.MainActivity" />
        <activity
            android:name=".controllers.edit_details_screen.CustomerEditDetailsActivity"
            android:exported="false"
            android:parentActivityName=".controllers.main_screen.MainActivity" />
        <activity
            android:name=".controllers.main_screen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>